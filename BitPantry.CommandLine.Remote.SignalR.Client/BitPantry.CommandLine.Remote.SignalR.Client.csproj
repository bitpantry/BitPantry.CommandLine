<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>disable</Nullable>
    <Title>BitPantry CommandLine SignalR Client</Title>
    <Version>1.0.0</Version>
    <Authors>BitPantry</Authors>
    <Description>Extends the core BitPantry.CommandLine functionality to add a client for connecting to remote CommandLine SignalR servers.</Description>
    <PackageProjectUrl>https://github.com/bitpantry/BitPantry.CommandLine</PackageProjectUrl>
    <AssemblyVersion>1.0.0</AssemblyVersion>
    <PackageReleaseNotes>Full client functionality for connecting to a remote SignalR CommandLine server.</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="BitPantry.CommandLine" Version="5.0.1" PrivateAssets="all" />
    <PackageReference Include="BitPantry.CommandLine.Remote.SignalR" Version="1.0.1" PrivateAssets="all" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="9.0.1" PrivateAssets="all" />
    <PackageReference Include="System.IdentityModel.Tokens.Jwt" Version="8.4.0" PrivateAssets="all" />
    <PackageReference Include="Microsoft.AspNetCore.SignalR.Client" Version="9.0.1" PrivateAssets="all" />
  </ItemGroup>

</Project>
