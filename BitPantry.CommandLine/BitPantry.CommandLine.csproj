    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>BitPantry</Authors>
    <Company>BitPantry</Company>
    <Product>BitPantry</Product>
    <Description>Command line API for building command line console applications</Description>
    <RepositoryUrl>https://github.com/bitpantry/BitPantry.CommandLine</RepositoryUrl>
