<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyVersion>5.2.0</AssemblyVersion>
    <Version>5.2.0</Version>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>annotations</Nullable>
    <Description>A library for building CLI applications.</Description>
    <Authors>BitPantry</Authors>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageProjectUrl>https://github.com/bitpantry/BitPantry.CommandLine</PackageProjectUrl>
    <RepositoryUrl>https://github.com/bitpantry/BitPantry.CommandLine</RepositoryUrl>
    <PackageReleaseNotes>Now using Spectr.Console to abstract System.Console and enable numerous services and utilities for building more robust console applications. By adding the BitPantry.CommandLine.Remote packages, you can host and connect to remote CommandLine servers with JWT token authentication.</PackageReleaseNotes>
    <Title>BitPantry CommandLine</Title>
  </PropertyGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="BitPantry.CommandLine.Tests" />
    <InternalsVisibleTo Include="BitPantry.CommandLine.Tests.Remote.SignalR" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="BitPantry.Parsing.Strings" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" />
    <PackageReference Include="Microsoft.Extensions.Logging" />
    <PackageReference Include="Spectre.Console" />
    <PackageReference Include="System.CodeDom" />
    <PackageReference Include="System.Linq.Dynamic.Core" />
    <PackageReference Include="TestableIO.System.IO.Abstractions.Wrappers" />
  </ItemGroup>


</Project>
